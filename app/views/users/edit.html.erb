<p>ユーザー編集</p>

<%= form_for(current_user) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_field :profile, autofocus: true, autocomplete: "profile" %>
  </div>

  <div class="field">
    <%= f.label :genre %><br />
    <%= f.collection_select :user_genre_id, Genre.all, :id, :name, autofocus: true, autocomplete: "genre" %>
  </div>

  <div class="field">
    <%= f.label :user_image %><br />
    <%= f.attachment_field :user_image, autofocus: true, autocomplete: "user_image" %>
  </div>

  <div class="field">
    <%= f.label :user_backimage %><br />
    <%= f.attachment_field :user_backimage, autofocus: true, autocomplete: "user_backimage" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "変更を完了" %>
  </div>



<% end %>