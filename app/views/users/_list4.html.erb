
<div class="modal_wrapper"></div>
   <div class="modal">

   <p class="topicnew">ユーザー編集</p>
    <%= form_for(current_user) do |f| %>

	  <div class="field col-xs-12">
	    <%= f.label :ユーザー名 %><br/>
	    <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名入力", class: "form-control" %>
	  </div>

	  <div class="field col-xs-12">
	    <%= f.label :プロフィール %><br/>
	    <%= f.text_field :profile, autofocus: true, autocomplete: "profile", placeholder: "プロフィール入力", class: "form-control" %>
	  </div>

	  <div class="field col-xs-12">
	    <%= f.label :Eメール%><br/>
	    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール入力", class: "form-control" %>
	  </div>

	  <div class="field col-xs-12">
	    <%= f.label :パスワード %>
	    <% if @minimum_password_length %>
	    <em>(<%= @minimum_password_length %> characters minimum)</em>
	    <% end %><br/>
	    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード入力", class: "form-control" %>
	  </div>

	  <div class="field col-xs-12">
	    <%= f.label :パスワード再入力 %><br/>
	    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード再入力", class: "form-control" %>
	  </div>
	  <br>

	  <div class="field">
	    <%= f.label :好みな話題 %><br/>
	    <%= f.collection_select :user_genre_id, Genre.all, :id, :name, autofocus: true, autocomplete: "genre" %>
	  </div>

	  <div class="field">
	    <%= f.label :user_image %><br/>
	    <%= f.attachment_field :user_image, autofocus: true, autocomplete: "user_image", class: "imagechen" %>
	  </div>

	  <div class="field">
	    <%= f.label :user_backimage %><br/>
	    <%= f.attachment_field :user_backimage, autofocus: true, autocomplete: "user_backimage", class: "imagechen" %>
	  </div>

	  <br>


	  <div class="actions">
	    <%= f.submit "変更を完了", class: "btn outline btn-success" %>
	  </div>

	<% end %>
   </div>
</div>